<%- include("header") -%>

    <div class="box" id="heading">
        <h1>
            <%= listTitle %>
        </h1>
    </div>

    <div class="box">
        <% for(var i=0; i < newListItems.length; i++) { %>
            <div class="item">
                <input type="checkbox">
                <p>
                    <%= newListItems[i] %>
                </p>
            </div>
        <% } %>

        <form class="item" action="/" method="post">
            <input type="text" name="newItem" placeholder="Enter Next Task" autocomplete="off">
            <button name="list" type="submit" value="<%= listTitle %>">+</button>
        </form>

    </div>

    <!-- <a href="/about">go to about</a> -->

    <%- include("footer") -%>
